  controllerName="project1.controller.App"
  displayBlock="true">

  <f:FlexibleColumnLayout
    id="flexiID"
    layout="OneColumn">

    <f:beginColumnPages>
      <Page id="page1" title="{i18n>beginColumnTitle}">
        <!-- begin-column content -->
      </Page>
    </f:beginColumnPages>

    <f:midColumnPages>
      <Page id="page2" title="{i18n>midColumnTitle}">
        <!-- mid-column content -->
      </Page>
    </f:midColumnPages>

    <f:endColumnPages>
      <Page id="page3" title="{i18n>endColumnTitle}">
        <!-- end-column content -->
      </Page>
    </f:endColumnPages>

  </f:FlexibleColumnLayout>
</mvc:View>
